<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tasks_index_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:textColor="#736F6E"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/tasks_index_task_description" />

    <TextView
        android:id="@+id/tasks_index_task_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tasks_index_task_description"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:textColor="#736F6E"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/tasks_index_task_details" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskIndexTaskId"
        android:visibility="gone"/>
</RelativeLayout>